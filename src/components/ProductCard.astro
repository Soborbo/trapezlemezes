---
/**
 * ProductCard - Kompakt termékkártya a /trapezlemez/ oldalhoz
 *
 * Szín + ár + m² input + kosárba gomb + csavar upsell popup.
 */

import type { ImageMetadata } from 'astro';
import { SmallImage } from './images';

interface Props {
  colorId: string;
  colorLabel: string;
  ral?: string;
  imageSrc: ImageMetadata;
  pricePerSqm: number;
  colorType: string;
  available?: boolean;
  badge?: string;
}

const {
  colorId,
  colorLabel,
  ral,
  imageSrc,
  pricePerSqm,
  colorType,
  available = true,
  badge,
} = Astro.props;

const formattedPrice = new Intl.NumberFormat('hu-HU').format(pricePerSqm);
---

<div class:list={['product-card', { 'product-card--unavailable': !available }]} data-color-id={colorId} data-color-type={colorType} data-price={pricePerSqm} data-color-label={`${colorLabel}${ral ? ' ' + ral : ''}`}>
  <div class="product-image">
    <SmallImage src={imageSrc} alt={`${colorLabel} trapézlemez`} />
    {badge && <span class="product-badge">{badge}</span>}
  </div>
  <div class="product-info">
    <h3 class="product-name">{colorLabel}</h3>
    {ral && <p class="product-ral">{ral}</p>}
    <p class="product-price">
      <span class="price-value">{formattedPrice}</span>
      <span class="price-unit">Ft/m²</span>
    </p>
  </div>
  {available && (
    <div class="product-order">
      <div class="sqm-row">
        <label class="sqm-label" for={`sqm-${colorId}`}>m²</label>
        <input
          type="number"
          id={`sqm-${colorId}`}
          class="sqm-input"
          min="1"
          max="10000"
          step="0.1"
          placeholder="pl. 50"
          data-color-id={colorId}
        />
      </div>
      <button
        class="btn btn-primary product-cart-btn"
        data-action="add-to-cart"
        data-color-id={colorId}
        data-price-per-sqm={pricePerSqm}
        data-color-type={colorType}
        disabled
      >
        Kosárba
      </button>
    </div>
  )}
  {!available && (
    <p class="product-unavailable">Jelenleg nem elérhető</p>
  )}
</div>

<style>
  .product-card {
    background: var(--color-white);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: box-shadow var(--transition-fast);
    border: 1px solid var(--color-border);
  }

  .product-card:hover {
    box-shadow: var(--shadow-md);
  }

  .product-card--unavailable {
    opacity: 0.6;
  }

  .product-image {
    position: relative;
    aspect-ratio: 3/2;
    overflow: hidden;
  }

  .product-badge {
    position: absolute;
    top: var(--spacing-xs);
    right: var(--spacing-xs);
    background: var(--color-accent);
    color: white;
    font-size: 0.65rem;
    font-weight: 700;
    padding: 2px 6px;
    border-radius: var(--radius-full);
    text-transform: uppercase;
  }

  .product-info {
    padding: var(--spacing-sm) var(--spacing-sm) 0;
    flex: 1;
  }

  .product-name {
    margin: 0;
    font-size: 0.9rem;
    font-weight: 600;
    line-height: 1.2;
  }

  .product-ral {
    margin: 2px 0 0;
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }

  .product-price {
    margin: 4px 0 0;
  }

  .price-value {
    font-size: var(--font-size-lg);
    font-weight: 700;
    color: var(--color-primary-dark);
  }

  .price-unit {
    font-size: 0.75rem;
    color: var(--color-text-light);
    margin-left: 2px;
  }

  .product-order {
    padding: var(--spacing-sm);
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .sqm-row {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .sqm-label {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-text-light);
    min-width: 22px;
  }

  .sqm-input {
    flex: 1;
    padding: 6px 8px;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    font-size: 0.85rem;
    font-family: inherit;
    min-width: 0;
  }

  .sqm-input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 2px rgba(46, 125, 50, 0.15);
  }

  .product-cart-btn {
    width: 100%;
    padding: 8px;
    font-size: 0.85rem;
  }

  .product-cart-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .product-unavailable {
    margin: 0 var(--spacing-sm) var(--spacing-sm);
    text-align: center;
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    font-style: italic;
  }
</style>
