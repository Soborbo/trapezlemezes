---
/**
 * CTA Box - Árajánlatkérő doboz (használható minden oldalon)
 */
import { FixedImage } from './images';
import avatar from '../assets/images/kapcsolat-avatar.jpg';

interface Props {
  title?: string;
  showAvatar?: boolean;
}

const {
  title = "Kérdése van? Örömmel segítünk!",
  showAvatar = true
} = Astro.props;
---

<div class="cta-box">
  <div class="cta-content">
    {showAvatar && (
      <div class="cta-avatar">
        <FixedImage src={avatar} alt="Kovács Gergely" width={80} height={80} class="avatar-img" />
      </div>
    )}
    <div class="cta-text">
      <h3>{title}</h3>
      <p>Kovács Gergely, értékesítési vezető</p>
    </div>
  </div>

  <div class="cta-actions">
    <a href="tel:+3613009206" class="btn btn-accent btn-lg">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
      </svg>
      +36 1 300-92-06
    </a>
    <a href="/kalkulator" class="btn btn-primary btn-lg">
      Kérek árajánlatot
    </a>
  </div>
</div>

<style>
  .cta-box {
    background: var(--color-white);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
    box-shadow: var(--shadow-lg);
    text-align: center;
  }

  .cta-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-lg);
  }

  .cta-avatar {
    flex-shrink: 0;
  }

  .avatar-img {
    border-radius: var(--radius-full);
    object-fit: cover;
  }

  .cta-text h3 {
    margin: 0 0 var(--spacing-xs);
    font-size: var(--font-size-xl);
  }

  .cta-text p {
    margin: 0;
    color: var(--color-text-muted);
  }

  .cta-actions {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .cta-actions .btn {
    width: 100%;
    justify-content: center;
  }

  @media (min-width: 640px) {
    .cta-content {
      flex-direction: row;
      text-align: left;
    }

    .cta-actions {
      flex-direction: row;
      justify-content: center;
    }

    .cta-actions .btn {
      width: auto;
    }
  }
</style>
