---
/**
 * SmallImage - SMALL pattern (40vw)
 * Use: Split 40/60 layouts where text is dominant, image is smaller
 * Pattern: 40vw desktop, 100vw mobile
 */
import { Picture } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  src: ImageMetadata;
  alt: string;
  class?: string;
}

const { src, alt, class: className } = Astro.props;

// SMALL pattern from astro-images skill
const widths = [256, 512, 640, 1024, 1280];
const sizes = '(min-width: 1024px) 40vw, 100vw';
---

<Picture
  src={src}
  alt={alt}
  widths={widths}
  sizes={sizes}
  formats={['avif', 'webp']}
  quality={60}
  class={className}
  loading="lazy"
  decoding="async"
/>
