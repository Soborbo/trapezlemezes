---
/**
 * FifthImage - FIFTH pattern (20vw)
 * Use: 5-column icon grids, small feature images
 * Pattern: 20vw desktop, 33vw tablet, 50vw mobile
 */
import { Picture } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  src: ImageMetadata;
  alt: string;
  class?: string;
}

const { src, alt, class: className } = Astro.props;

// FIFTH pattern from astro-images skill
const widths = [160, 320, 512, 640, 768];
const sizes = '(min-width: 1024px) 20vw, (min-width: 640px) 33vw, 50vw';
---

<Picture
  src={src}
  alt={alt}
  widths={widths}
  sizes={sizes}
  formats={['avif', 'webp']}
  quality={60}
  class={className}
  loading="lazy"
  decoding="async"
/>
