---
/**
 * HeroImage - FULL pattern for full-bleed hero images
 * Use: Full-width hero sections, landing page banners
 * Pattern: 100vw - uses FULL widths array
 * LCP: Only ONE per page should have priority=true
 */
import { Picture } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  src: ImageMetadata;
  alt: string;
  priority?: boolean;
  class?: string;
}

const { src, alt, priority = false, class: className } = Astro.props;

// FULL pattern from astro-images skill
const widths = [640, 750, 828, 1080, 1200, 1920, 2048, 2560];
const sizes = '100vw';
---

<Picture
  src={src}
  alt={alt}
  widths={widths}
  sizes={sizes}
  formats={['avif', 'webp']}
  quality={60}
  class={className}
  loading={priority ? 'eager' : 'lazy'}
  fetchpriority={priority ? 'high' : undefined}
  decoding={priority ? undefined : 'async'}
/>
