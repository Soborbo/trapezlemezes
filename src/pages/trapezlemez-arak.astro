    "description": "Útmutató a trapézlemez kiválasztásához: anyag, vastagság és bevonat típusok részletes bemutatása.",
    "image": heroImage.src,
    "author": {
      "@type": "Person",
      "name": "Farkas Roland",
      "jobTitle": "ügyvezető igazgató",
      "worksFor": {
        "@type": "Organization",
        "name": "Infinit Steel Kft."
      }
    },
    "publisher": {
      "@type": "Organization",
      "name": "Trapezlemezes.hu",
      "logo": {
        "@type": "ImageObject",
        "url": "https://trapezlemezes.hu/favicon.png"
      }
    },
    "datePublished": publishDate,
