    color: #475569;
    font-weight: 500;
  }

  .update-date {
    font-size: 0.8rem;
    color: #94a3b8;
  }

  @media (max-width: 600px) {
    .article-meta {
      flex-direction: column;
      align-items: flex-start;
    }

    .reading-info {
      align-items: flex-start;
    }
  }

  .article-header {
    margin-bottom: 40px;
  }

  .article-header h1 {
    font-size: clamp(1.5rem, 4vw, 2.1rem);
    color: #1a3d5c;
    margin-bottom: 20px;
    line-height: 1.3;
  }

  .article-intro {
    font-size: 1.1rem;
    color: #475569;
    line-height: 1.8;
  }

  .article-section {
    margin-bottom: 60px;
  }

  .article-section h2 {
    font-size: 1.5rem;
    color: #1a3d5c;
    margin-bottom: 16px;
    padding-bottom: 10px;
    border-bottom: 3px solid #12b1b8;
  }

  .article-section > p {
    font-size: 1.05rem;
    color: #475569;
    line-height: 1.7;
    margin-bottom: 24px;
  }

  /* Material Cards */
  .material-card {
    display: grid;
    grid-template-columns: 1fr 1fr;
