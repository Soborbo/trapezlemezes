---
import Layout from '../layouts/Layout.astro';
import BreadcrumbNav from '../components/BreadcrumbNav.astro';
import ExperienceBlock from '../components/ExperienceBlock.astro';
import TrustSignals from '../components/TrustSignals.astro';
import CtaBox from '../components/CtaBox.astro';
import { getFaqSchema, getBreadcrumbSchema } from '../config/schema';

const title = 'Szállítás | Trapezlemezes.hu';
const description = 'Trapézlemez szállítási opciók: gazdaságos, expressz, ingyenes 250 m² felett. Önköltségi áron szállítunk.';

const breadcrumbItems = [
  { label: 'Szállítás' },
];

const faqs = [
  {
    question: 'Mikor ingyenes a szállítás?',
    answer: '250 m² feletti rendelés esetén a szállítás automatikusan ingyenes, egész Magyarországon. Nem kell külön kérni – a rendszer automatikusan alkalmazza a kedvezményt a kosárban.',
  },
  {
    question: 'Hová szállítanak?',
    answer: 'Egész Magyarországra szállítunk, Budapesttől a legkisebb településig. A szállítás darus teherautóval történik, így a lemezt a kívánt helyre tudjuk letenni (ha a teherautó megközelíti). Speciális helyszínekre (szűk utca, domboldal) előre egyeztetünk.',
  },
  {
    question: 'Lehet hétvégén szállítást kérni?',
    answer: 'Alapesetben hétköznap (hétfő-péntek) szállítunk 8:00-17:00 között. Hétvégi szállítás egyedi egyeztetés alapján lehetséges expressz felár mellett – hívjon minket és megbeszéljük.',
  },
];

const faqSchema = getFaqSchema(faqs);
const breadcrumbSchema = getBreadcrumbSchema([
  { name: 'Főoldal', url: '/' },
  { name: 'Szállítás', url: '/szallitas' },
]);

const extraSchema = {
  '@context': 'https://schema.org',
  '@graph': [faqSchema, breadcrumbSchema],
};
---

<Layout title={title} description={description} extraSchema={extraSchema}>
  <div class="page-container">
    <BreadcrumbNav items={breadcrumbItems} />

    <article class="shipping-page">
      <header class="hero-section">
        <h1>Szállítási opciók</h1>
        <p class="hero-lead">
          Nem fuvarozó cég vagyunk – <strong>önköltségi áron szállítunk</strong>, nem akarunk ezen nyerészkedni.
          A cél, hogy a lemez időben megérkezzen és a projekt ne csússzon.
        </p>
      </header>

      <!-- Shipping Options Cards -->
      <section class="content-section">
        <h2>Szállítási lehetőségek</h2>
        <div class="shipping-grid">
          <div class="shipping-card">
            <div class="shipping-badge">Népszerű</div>
            <h3>Gazdaságos</h3>
            <p class="shipping-price">19 990 Ft</p>
            <p class="shipping-time">3-5 munkanap</p>
            <ul>
              <li>Összevonjuk más rendelésekkel</li>
              <li>Darus teherautóval</li>
              <li>Egész Magyarországra</li>
              <li>Időablak egyeztetés telefonon</li>
            </ul>
          </div>

          <div class="shipping-card express">
            <div class="shipping-badge express-badge">Gyors</div>
            <h3>Expressz</h3>
            <p class="shipping-price">39 990 Ft</p>
            <p class="shipping-time">1-2 munkanap</p>
            <ul>
              <li>Soron kívüli kezelés</li>
              <li>Darus teherautóval</li>
              <li>Egész Magyarországra</li>
              <li>Pontos időpont egyeztetés</li>
            </ul>
          </div>

          <div class="shipping-card free">
            <div class="shipping-badge free-badge">Legjobb ajánlat</div>
            <h3>Ingyenes</h3>
            <p class="shipping-price">0 Ft</p>
            <p class="shipping-time">250 m² felett automatikus</p>
            <ul>
              <li>Automatikusan alkalmazva</li>
              <li>Darus teherautóval</li>
              <li>Egész Magyarországra</li>
              <li>Időpont egyeztetés telefonon</li>
            </ul>
          </div>
        </div>
      </section>

      <!-- Személyes átvétel -->
      <section class="content-section">
        <h2>Személyes átvétel</h2>
        <div class="pickup-box">
          <div class="pickup-info">
            <h3>Telephelyünk</h3>
            <p class="pickup-address">1182 Budapest, Királyhágó utca 30.</p>
            <div class="pickup-details">
              <div class="pickup-detail">
                <strong>Nyitvatartás:</strong>
                <span>Hétfő – Péntek: 8:00 – 17:00</span>
              </div>
              <div class="pickup-detail">
                <strong>Szállítási díj:</strong>
                <span>Nincs – személyes átvétel ingyenes</span>
              </div>
              <div class="pickup-detail">
                <strong>Fontos:</strong>
                <span>Előzetes egyeztetés szükséges, hogy a rendelés készre gyártva várja</span>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- ExperienceBlock -->
      <ExperienceBlock text="Kivitelezőként kezdtük – tudjuk, milyen, amikor csúszik a munka a lemez miatt. Nem akarunk a szállításon keresni." />

      <!-- Trust Signals -->
      <TrustSignals />

      <!-- FAQ -->
      <section class="content-section faq-section">
        <h2>Gyakran ismételt kérdések</h2>
        {faqs.map((faq) => (
          <details class="faq-item">
            <summary>{faq.question}</summary>
            <div class="faq-answer">
              <p>{faq.answer}</p>
            </div>
          </details>
        ))}
      </section>

      <!-- CTA -->
      <div class="cta-wrapper">
        <CtaBox title="Kérdése van a szállításról? Hívjon!" />
      </div>
    </article>
  </div>
</Layout>

<style>
  .page-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 var(--spacing-md);
  }

  .shipping-page {
    padding-bottom: var(--spacing-3xl);
  }

  /* Hero */
  .hero-section {
    padding: var(--spacing-2xl) 0 var(--spacing-xl);
  }

  .hero-section h1 {
    font-size: clamp(1.6rem, 4vw, 2.2rem);
    color: var(--color-primary-dark);
    line-height: 1.3;
    margin-bottom: var(--spacing-md);
  }

  .hero-lead {
    font-size: var(--font-size-lg);
    color: var(--color-text-light);
    line-height: 1.7;
  }

  /* Content Sections */
  .content-section {
    margin-bottom: var(--spacing-2xl);
  }

  .content-section h2 {
    font-size: var(--font-size-2xl);
    color: var(--color-primary-dark);
    margin-bottom: var(--spacing-md);
    padding-bottom: var(--spacing-sm);
    border-bottom: 3px solid var(--color-primary);
  }

  .content-section p {
    font-size: 1rem;
    color: var(--color-text-light);
    line-height: 1.7;
    margin-bottom: var(--spacing-md);
  }

  /* Shipping Grid */
  .shipping-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-md);
    margin-top: var(--spacing-lg);
  }

  @media (max-width: 768px) {
    .shipping-grid {
      grid-template-columns: 1fr;
    }
  }

  .shipping-card {
    position: relative;
    background: var(--color-bg-light);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl) var(--spacing-lg);
    text-align: center;
    border: 2px solid var(--color-border);
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .shipping-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .shipping-card.express {
    border-color: var(--color-warning);
  }

  .shipping-card.free {
    border-color: var(--color-primary);
    background: linear-gradient(135deg, #e8f5e9 0%, #f1f8e9 100%);
  }

  .shipping-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-primary-dark);
    color: var(--color-white);
    padding: var(--spacing-xs) var(--spacing-md);
    border-radius: var(--radius-full);
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    white-space: nowrap;
  }

  .express-badge {
    background: var(--color-warning);
    color: var(--color-text);
  }

  .free-badge {
    background: var(--color-primary);
    color: var(--color-white);
  }

  .shipping-card h3 {
    font-size: var(--font-size-xl);
    color: var(--color-primary-dark);
    margin-bottom: var(--spacing-sm);
    margin-top: var(--spacing-sm);
  }

  .shipping-price {
    font-size: var(--font-size-3xl);
    font-weight: 700;
    color: var(--color-primary-dark);
    margin-bottom: var(--spacing-xs);
  }

  .shipping-time {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-md);
  }

  .shipping-card ul {
    list-style: none;
    padding: 0;
    margin: 0;
    text-align: left;
  }

  .shipping-card li {
    padding: var(--spacing-xs) 0;
    padding-left: var(--spacing-lg);
    position: relative;
    font-size: var(--font-size-sm);
    color: var(--color-text-light);
    line-height: 1.5;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }

  .shipping-card li:last-child {
    border-bottom: none;
  }

  .shipping-card li::before {
    content: '\2713';
    position: absolute;
    left: 0;
    color: var(--color-primary);
    font-weight: 700;
  }

  /* Pickup Box */
  .pickup-box {
    background: var(--color-bg-light);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
    border-left: 4px solid var(--color-primary);
  }

  .pickup-info h3 {
    font-size: var(--font-size-xl);
    color: var(--color-primary-dark);
    margin-bottom: var(--spacing-sm);
  }

  .pickup-address {
    font-size: var(--font-size-lg);
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--spacing-md);
  }

  .pickup-details {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .pickup-detail {
    display: flex;
    gap: var(--spacing-sm);
    font-size: var(--font-size-sm);
    color: var(--color-text-light);
    line-height: 1.5;
  }

  .pickup-detail strong {
    color: var(--color-text);
    min-width: 120px;
    flex-shrink: 0;
  }

  @media (max-width: 480px) {
    .pickup-detail {
      flex-direction: column;
      gap: var(--spacing-xs);
    }

    .pickup-detail strong {
      min-width: auto;
    }
  }

  /* FAQ */
  .faq-item {
    background: var(--color-bg-light);
    border-radius: var(--radius-md);
    margin-bottom: var(--spacing-sm);
    overflow: hidden;
  }

  .faq-item summary {
    padding: var(--spacing-md) var(--spacing-lg);
    font-weight: 600;
    color: var(--color-primary-dark);
    cursor: pointer;
    list-style: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .faq-item summary::-webkit-details-marker {
    display: none;
  }

  .faq-item summary::after {
    content: '+';
    font-size: var(--font-size-xl);
    color: var(--color-primary);
    font-weight: 300;
  }

  .faq-item[open] summary::after {
    content: '-';
  }

  .faq-answer {
    padding: 0 var(--spacing-lg) var(--spacing-md);
  }

  .faq-answer p {
    font-size: var(--font-size-sm);
    color: var(--color-text-light);
    line-height: 1.6;
    margin: 0;
  }

  /* CTA Wrapper */
  .cta-wrapper {
    margin-top: var(--spacing-2xl);
  }
</style>
