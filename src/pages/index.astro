import kalkulatorImg from '../assets/images/trapezlemez-kalkulator.jpg';
import farkasRoland from '../assets/images/farkas-roland.jpg';
import trapezMeretek from '../assets/images/trapezlemez-meretek.png';
import narancsTrapez from '../assets/images/narancssarga-trapezlemez.jpg';

// Color images
import antracitTrapez from '../assets/images/antracit-trapezlemez.jpg';
import vorosTrapez from '../assets/images/voros-trapezlemez.jpg';
import ral3011Trapez from '../assets/images/ral3011.jpg';
import barnaTrapez from '../assets/images/barna-trapezlemez.jpg';
import feketeTrapez from '../assets/images/fekete-trapezlemez.jpg';
import feherTrapez from '../assets/images/feher-trapezlemez.jpg';
import tortfeherTrapez from '../assets/images/trapezlemez-feher.jpg';
import kekTrapez from '../assets/images/kek-trapezlemez.jpg';
import zoldTrapez from '../assets/images/zold-trapezlemez.jpg';
import famintasTrapez from '../assets/images/famintas-trapezlemez.jpg';
import horganyzottTrapez from '../assets/images/horganyzott-natur-trapezlemez.jpg';


// Guide images
import trapezTetoHaz from '../assets/images/trapezlemez-teto-haz.jpg';
import trapezTetoSzereles from '../assets/images/trapezlemez-teto-szereles.jpg';
import logo from '../assets/images/logo.png';
import gyartosorBg from '../assets/images/trapezlemez-gyartosor.jpg';

// Process images
import folyamatKalkulator from '../assets/images/folyamat-kalkulator.jpg';
import folyamatHivas from '../assets/images/folyamat-hivas.jpg';
import folyamatGyartas from '../assets/images/folyamat-gyartas.jpg';
import folyamatSzallitas from '../assets/images/folyamat-szallitas.jpg';

// Benefits images
import garanciaImg from '../assets/images/trapezlemez-garancia.png';
import ketNapAlattImg from '../assets/images/2nap-alatt.jpg';
import meretreVagottImg from '../assets/images/meretre-vagott-trapezlemez.jpg';

// Colors data with prices
const colors = [
  { src: horganyzottTrapez, name: 'Horganyzott', ral: 'natúr', price: '2 240 Ft/nm' },
  { src: famintasTrapez, name: 'Famintás', ral: 'prémium', price: '2 840 Ft/nm' },
  { src: feherTrapez, name: 'Fehér', ral: 'RAL 9010', price: '2 640 Ft/nm' },
  { src: tortfeherTrapez, name: 'Törtfehér', ral: 'RAL 9002', price: '2 640 Ft/nm' },
  { src: antracitTrapez, name: 'Antracit', ral: 'RAL 7016', price: '2 640 Ft/nm' },
  { src: vorosTrapez, name: 'Cserépvörös', ral: 'RAL 3009', price: '2 640 Ft/nm' },
  { src: ral3011Trapez, name: 'Vörös', ral: 'RAL 3011', price: '2 640 Ft/nm' },
  { src: barnaTrapez, name: 'Csokoládébarna', ral: 'RAL 8017', price: '2 640 Ft/nm' },
  { src: feketeTrapez, name: 'Fekete', ral: 'RAL 9005', price: '2 640 Ft/nm' },
  { src: kekTrapez, name: 'Kék', ral: 'RAL 5010', price: '2 640 Ft/nm' },
  { src: zoldTrapez, name: 'Zöld', ral: 'RAL 6005', price: '2 640 Ft/nm' },
  { src: narancsTrapez, name: 'Narancssárga', ral: 'RAL 2000', price: '2 249 Ft/nm', badge: 'Akciós' },
];

// FAQ data
const faqs = [
  {
    question: 'Miért ennyire olcsó nálunk a trapézlemez?',
    answer: 'Minden termék, így a trapézlemez ára is a kiskereskedő haszonkulcsa miatt ugrik nagyot. Mi magunk importáljuk a különleges minőségű acélt, magunk gyártjuk a saját gépeinken, és magunk is forgalmazzuk a kész terméket.'
  },
  {
    question: 'Miért rozsdásodik be sok trapézlemez?',
    answer: 'A vékonyabb trapézlemezek horganyzása sokszor egyszerűen az anyag tulajdonságai miatt nem tökéletes, hamar rozsdásodásnak indulhat az anyag. Mi ezért használunk kizárólag 0.5 milliméteres lemezeket.'
  },
  {
    question: 'Hogyan tudunk ilyen gyorsan gyártani?',
    answer: 'Egyrészt mert már maga a nyersanyag színre festett és horganyzott. Másrészt nálunk Ön egyenesen a gyártótól vásárol, nincsen várakozási idő.'
  },
  {
    question: 'Mennyire tartós?',
    answer: 'Mi robosztus, 0,5 mm-es anyagból készítünk trapézlemezt, mert a tapasztalataink szerint ez az a vastagság, amely még nem túl nehéz, de már kellően erős és szilárd.'
  }
];

// Optimize background image for contact section
const optimizedGyartosorBg = await getImage({
  src: gyartosorBg,
  width: 1920,
  format: 'webp',
  quality: 80,
});
---

<Layout
  title="T18 trapézlemez (0,5 mm) most csak 2240 Ft / nm áron a gyártótól"
  description="Ne fizesse ki a kiskereskedő hasznát: vásároljon vastagabb (0,5 mm) és erősebb trapézlemezt alacsonyabb áron. 48 óra szállítás, 20 év garancia."
>
  <!-- FAQ Schema -->
  <script is:inline type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": faqs.map(faq => ({
      "@type": "Question",
      "name": faq.question,
      "acceptedAnswer": {
        "@type": "Answer",
        "text": faq.answer
      }
    }))
  })} />

  <!-- Product Schema -->
  <script is:inline type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Product",
    "name": "T18 Trapézlemez 0,5 mm",
    "description": "Minőségi trapézlemez 0,5 mm vastagságban, horganyzott vagy színes kivitelben. Méretre vágva, 48 órás gyártással.",
    "brand": {
      "@type": "Brand",
      "name": "Trapezlemezes.hu"
    },
    "offers": {
      "@type": "AggregateOffer",
      "priceCurrency": "HUF",
      "lowPrice": "2240",
      "highPrice": "2840",
      "offerCount": "12",
      "availability": "https://schema.org/InStock"
    },
    "aggregateRating": {
      "@type": "AggregateRating",
      "ratingValue": "4.9",
      "reviewCount": "127"
    }
  })} />
  <!-- Hero Section - Text left centered, image right edge-to-edge -->
  <section class="hero">
    <div class="hero-content">
      <h1>TRAPÉZLEMEZ KÖZVETLEN<br /> A GYÁRTÓTÓL</h1>
      <p class="hero-subtitle">
        <strong>Ne fizesse ki a kiskereskedő hasznát: vásároljon vastagabb (0,5&nbsp;mm) és erősebb trapézlemezt alacsonyabb áron.</strong>
      </p>

      <div class="hero-cta-group">
        <p class="cta-label">Hívjon most:</p>
        <a href="tel:+3613009206" class="phone-number">+36 1 300-92-06</a>
        <span class="cta-or">vagy</span>
        <a href="/kalkulator" class="btn-cta">
          <span class="btn-cta-main">SZÁMOLD KI A KÖLTSÉGEIMET!</span>
          <span class="btn-cta-sub">azonnali árajánlat kalkulátor</span>
        </a>
      </div>
    </div>

    <div class="hero-image">
      <HeroImage src={heroImg} alt="T18 trapézlemez 0,5 mm vastagságban, többféle színben - antracit, vörös, barna, fehér, kék" priority />
      <div class="hero-price-badge">
        <span class="badge-top">0,5 mm</span>
        <span class="badge-middle">horganyzott</span>
        <span class="badge-price">2240 Ft</span>
        <span class="badge-bottom">(bruttó, nm)</span>
      </div>
    </div>

    <!-- 4 USPs at the bottom of the fold - 2x2 grid -->
    <div class="hero-usps">
      <div class="usp-item">
        <strong>AKÁR INGYENES</strong>
        <span>országos házhoz szállítás</span>
      </div>
      <div class="usp-item">
        <strong>48 óra</strong>
        <span>szállítási határidő</span>
      </div>
      <div class="usp-item">
        <strong>20 év</strong>
        <span>garancia</span>
      </div>
      <div class="usp-item">
        <strong>10+</strong>
        <span>szín és mintázat</span>
      </div>
    </div>
  </section>

  <!-- Calculator CTA Section -->
  <section class="calculator-section">
    <div class="container">
      <h2 class="section-title">Árkalkulátor</h2>
      <div class="calculator-content">
        <div class="calculator-image">
          <ContentImage src={kalkulatorImg} alt="Trapézlemez árkalkulátor" />
        </div>
        <div class="calculator-text">
          <p>Számítsa ki, mennyi trapézlemezre lesz szüksége és mennyibe fog kerülni kevesebb, mint egy perc alatt!</p>
          <a href="/kalkulator" class="btn-cta-blue">Számolja ki a költségeit most!</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Google Reviews Section -->
  <section class="reviews-section">
    <div class="container">
      <div class="reviews-grid">
        <div class="review-card">
          <div class="review-stars">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="#FBBC04"><path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/></svg>
            <svg width="18" height="18" viewBox="0 0 24 24" fill="#FBBC04"><path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/></svg>
            <svg width="18" height="18" viewBox="0 0 24 24" fill="#FBBC04"><path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/></svg>
            <svg width="18" height="18" viewBox="0 0 24 24" fill="#FBBC04"><path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/></svg>
            <svg width="18" height="18" viewBox="0 0 24 24" fill="#FBBC04"><path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/></svg>
          </div>
          <p class="review-text">"Ahogy ígérték e-mailben, 4-5 nap a gyártás. Minden klappolt átvételkor is. Az ár pedig a legversenyképesebb."</p>
          <div class="review-author-row">
            <svg class="google-logo" width="24" height="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
              <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
              <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
              <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
            </svg>
            <span class="review-author">O. M.</span>
          </div>
        </div>
        <div class="review-card">
          <div class="review-stars">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="#FBBC04"><path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/></svg>
            <svg width="18" height="18" viewBox="0 0 24 24" fill="#FBBC04"><path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/></svg>
            <svg width="18" height="18" viewBox="0 0 24 24" fill="#FBBC04"><path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/></svg>
            <svg width="18" height="18" viewBox="0 0 24 24" fill="#FBBC04"><path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/></svg>
            <svg width="18" height="18" viewBox="0 0 24 24" fill="#FBBC04"><path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/></svg>
          </div>
          <p class="review-text">"Kedvesek, extra gyorsak, segítőkészek, korrektek. Biztos hogy még lesz megrendelésünk tőlük. Csak ajánlani tudom."</p>
          <div class="review-author-row">
            <svg class="google-logo" width="24" height="24" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
              <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
              <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
              <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
            </svg>
            <span class="review-author">Márkné Melinda E.</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Promo Section with Orange Product -->
  <section class="promo-section">
    <div class="container">
      <div class="promo-grid">
        <div class="promo-image">
          <ContentImage src={narancsTrapez} alt="Narancssárga trapézlemez" />
        </div>
        <div class="promo-content">
          <div class="promo-badge">AKCIÓ!</div>
          <p class="promo-text">
            0.6mm-es új, narancssárga (RAL2000) trapézlemez most csak
          </p>
          <p class="promo-price">2249 Ft /nm!</p>
          <p class="promo-urgency">Amíg a készlet tart!</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Problem Section - Video 40% left, Text 60% right -->
  <section class="problem-section">
    <div class="problem-grid">
      <div class="problem-video">
        <div class="youtube-embed" data-video-id="U_hP1vBoitg">
          <div class="youtube-thumbnail"></div>
          <button class="youtube-play-button" aria-label="Videó lejátszása">
            <svg height="100%" version="1.1" viewBox="0 0 68 48" width="100%">
              <path d="M66.52,7.74c-0.78-2.93-2.49-5.41-5.42-6.19C55.79,.13,34,0,34,0S12.21,.13,6.9,1.55 C3.97,2.33,2.27,4.81,1.48,7.74C0.06,13.05,0,24,0,24s0.06,10.95,1.48,16.26c0.78,2.93,2.49,5.41,5.42,6.19 C12.21,47.87,34,48,34,48s21.79-0.13,27.1-1.55c2.93-0.78,4.64-3.26,5.42-6.19C67.94,34.95,68,24,68,24S67.94,13.05,66.52,7.74z" fill="#f00"></path>
              <path d="M 45,24 27,14 27,34" fill="#fff"></path>
            </svg>
          </button>
        </div>
      </div>
      <div class="problem-content">
        <h2>Hogyan rontják el sokan</h2>
        <p>Sokaknak van rossz tapasztalata a trapézlemezből készült kerítésekkel, oldalfalakkal és tetőkkel, mert könnyen törnek, hamar rozsdásodnak, és elhajolhatnak egy komolyabb szélviharban. <strong>Miért van ez így? Mert nem jó lemezt vesznek.</strong></p>
        <p>A vékonyabb trapézlemezekben egyszerűen nincsen "elég anyag", nem áll meg rajtuk a rozsdamentesítésért felelős horganyzó anyag, és nem tudnak elég merevséget biztosítani, ezért, törnek, szakadnak, hajlanak. Sokan próbálnak spórolni a vékonyabb anyaggal, de végül rosszabbul járnak...</p>
        <p class="solution-text">A jó hír, hogy mi az erősebb, vastagabb, ellenállóbb <strong>0,5 milliméteres</strong> lemezt adjuk sokkal olcsóbban, mint az megszokott. Ez már elég erős ahhoz, hogy jó szívvel tudjunk rá <strong>20 év garanciát</strong> vállalni - miközben árban sokszor még olcsóbb is, mint a vékonyabb versenytársai.</p>
      </div>
    </div>
  </section>

  <!-- USP Checker Section - 3 alternating image/text rows -->
  <section class="checker-section">
    <!-- Row 1: Image left, text right -->
    <div class="checker-row">
      <div class="checker-image">
        <LargeImage src={trapezEsztetikus} alt="Esztétikus trapézlemez" />
      </div>
      <div class="checker-content">
        <h3>Szeretni fog ránézni sok éven át</h3>
        <p>Minőségi trapézlemezzel nem csak tartós, de szép is lesz az építménye. Több, mint 10 féle szín és minta közül választhat az Ön vagy ügyfele igényei szerint.</p>
      </div>
    </div>

    <!-- Row 2: Text left, image right -->
    <div class="checker-row checker-row-reverse">
      <div class="checker-image">
        <LargeImage src={trapezKerites} alt="Trapézlemez kerítés" />
      </div>
      <div class="checker-content">
        <h3>Építkezzen gyorsan és egyszerűen</h3>
        <p>A lemezeket az Ön igényeinek megfelelően előre méretre vágjuk, így már csak fel kell szerelnie a kész paneleket. Ráadásul a lemezek könnyűek és ellenállóak (nem törékenyek, mint például a cserép vagy a pala), így egyszerű velük dolgozni.</p>
      </div>
    </div>

    <!-- Row 3: Image left, text right -->
    <div class="checker-row">
      <div class="checker-image">
        <LargeImage src={trapezGyarto} alt="Trapézlemez gyártó" />
      </div>
      <div class="checker-content">
        <h3>Spóroljon kompromisszumok nélkül</h3>
        <p>Spórolja meg a kiskereskedői árrést és vásároljon egyenesen a gyártótól. Takarítson meg súlyos tíz- vagy százezreket minőségi kompromisszumok nélkül!</p>
      </div>
    </div>
  </section>

  <!-- Shipping Section -->
  <section class="shipping-section">
    <div class="container">
      <h2 class="shipping-title">Akár <em>ingyen</em> házhozszállítjuk</h2>
      <p class="shipping-desc">A kész trapézlemezeket <strong>önköltségi áron szállítjuk ki</strong>. Miért? Mert nem fuvarozók vagyunk, hanem trapézlemez gyártók, <strong>nem akarunk a szállításon pénzt keresni</strong>.</p>
      <p class="shipping-note">A kész, méretre vágott trapézlemez <strong>személyesen is átvehető</strong> a Budapest 18. kerületében található telephelyünkön.</p>

      <div class="shipping-options">
        <div class="shipping-card">
          <h3>Gazdaságos kiszállítás</h3>
          <p><strong>Ha spórolni szeretne a kiszállításon</strong>, összevárhatjuk a rendelését más, környékbeli rendelésekkel, így a kiszállítás díja eloszlik több vevő között. Ha ezt választja, 500e Ft feletti rendeléseknél <strong>a szállítás akár ingyenes is lehet</strong>!</p>
          <div class="shipping-prices">
            <div class="shipping-prices-header economy">A gazdaságos kiszállítás költsége</div>
            <div class="shipping-price-row">
              <span>250 négyzetméter alatt</span>
              <span class="price">19 990 Ft</span>
            </div>
            <div class="shipping-price-row free">
              <span>250 négyzetméter felett</span>
              <span class="price">INGYENES</span>
            </div>
          </div>
        </div>
