import logo from '../assets/images/logo.png';
import gyartosorBg from '../assets/images/trapezlemez-gyartosor.jpg';

// Colors data with prices
const colors = [
  { src: antracitTrapez, name: 'Antracit szürke', ral: 'RAL 7016', price: '2 640 Ft/nm' },
  { src: vorosTrapez, name: 'Bordó', ral: 'RAL 3011', price: '2 640 Ft/nm' },
  { src: barnaTrapez, name: 'Csokoládébarna', ral: 'RAL 8017', price: '2 640 Ft/nm' },
  { src: feketeTrapez, name: 'Fekete', ral: 'RAL 9005', price: '2 640 Ft/nm' },
  { src: feherTrapez, name: 'Fehér', ral: 'RAL 9010', price: '2 640 Ft/nm' },
  { src: kekTrapez, name: 'Kék', ral: 'RAL 5010', price: '2 640 Ft/nm' },
  { src: famintasTrapez, name: 'Famintás', ral: null, price: '2 840 Ft/nm' },
  { src: horganyzottTrapez, name: 'Horganyzott', ral: 'natúr', price: '2 240 Ft/nm' },
];

// FAQ data
const faqs = [
  {
    question: 'Miért ennyire olcsó nálunk a trapézlemez?',
    answer: 'Minden termék, így a trapézlemez ára is a kiskereskedő haszonkulcsa miatt ugrik nagyot. Mi magunk importáljuk a különleges minőségű acélt, magunk gyártjuk a saját gépeinken, és magunk is forgalmazzuk a kész terméket.'
  },
  {
    question: 'Miért rozsdásodik be sok trapézlemez?',
    answer: 'A vékonyabb trapézlemezek horganyzása sokszor egyszerűen az anyag tulajdonságai miatt nem tökéletes, hamar rozsdásodásnak indulhat az anyag. Mi ezért használunk kizárólag 0.5 milliméteres lemezeket.'
  },
  {
    question: 'Hogyan tudunk ilyen gyorsan gyártani?',
    answer: 'Egyrészt mert már maga a nyersanyag színre festett és horganyzott. Másrészt nálunk Ön egyenesen a gyártótól vásárol, nincsen várakozási idő.'
  },
  {
    question: 'Mennyire tartós?',
    answer: 'Mi robosztus, 0,5 mm-es anyagból készítünk trapézlemezt, mert a tapasztalataink szerint ez az a vastagság, amely még nem túl nehéz, de már kellően erős és szilárd.'
  }
];
---

<Layout
  title="T18 trapézlemez (0,5 mm) most csak 2240 Ft / nm áron a gyártótól"
  description="Ne fizesse ki a kiskereskedő hasznát: vásároljon vastagabb (0,5 mm) és erősebb trapézlemezt alacsonyabb áron. 48 óra szállítás, 20 év garancia."
>
  <!-- Hero Section - Text left centered, image right edge-to-edge -->
  <section class="hero">
    <div class="hero-content">
      <h1>TRAPÉZLEMEZ KÖZVETLEN<br />A GYÁRTÓTÓL</h1>
      <p class="hero-subtitle">
        Ne fizesse ki a kiskereskedő hasznát: vásároljon vastagabb (0,5 mm) és erősebb trapézlemezt alacsonyabb áron.
      </p>

      <div class="hero-cta-group">
        <p class="cta-label">Hívjon most:</p>
        <a href="tel:+3613009206" class="phone-number">+36 1 300-92-06</a>
        <span class="cta-or">vagy</span>
        <a href="/kalkulator" class="btn-cta">
          <span class="btn-cta-main">SZÁMOLD KI A KÖLTSÉGEIMET!</span>
          <span class="btn-cta-sub">azonnali árajánlat kalkulátor</span>
        </a>
      </div>
    </div>

    <div class="hero-image">
      <HeroImage src={heroImg} alt="T18 trapézlemez 0,5 mm vastagságban, többféle színben - antracit, vörös, barna, fehér, kék" priority />
      <div class="hero-price-badge">
        <span class="badge-top">0,5 mm</span>
        <span class="badge-middle">horganyzott</span>
        <span class="badge-price">2240 Ft</span>
        <span class="badge-bottom">(bruttó, nm)</span>
      </div>
    </div>

    <!-- 4 USPs at the bottom of the fold -->
    <div class="hero-usps">
      <div class="usp-item">
        <div class="usp-icon usp-blue">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="1" y="3" width="15" height="13"></rect><polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon><circle cx="5.5" cy="18.5" r="2.5"></circle><circle cx="18.5" cy="18.5" r="2.5"></circle></svg>
        </div>
        <div class="usp-text">
          <strong>AKÁR INGYENES</strong>
          <span>országos házhozszállítás</span>
        </div>
      </div>
      <div class="usp-item">
        <div class="usp-icon usp-green">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>
        </div>
        <div class="usp-text">
          <strong>48 óra</strong>
          <span>szállítási határidő</span>
        </div>
      </div>
      <div class="usp-item">
        <div class="usp-icon usp-purple">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path></svg>
        </div>
        <div class="usp-text">
          <strong>20 év</strong>
          <span>garancia</span>
        </div>
      </div>
      <div class="usp-item">
        <div class="usp-icon usp-orange">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="3"></circle><circle cx="12" cy="5" r="1"></circle><circle cx="19" cy="12" r="1"></circle><circle cx="12" cy="19" r="1"></circle><circle cx="5" cy="12" r="1"></circle><circle cx="7" cy="7" r="1"></circle><circle cx="17" cy="7" r="1"></circle><circle cx="17" cy="17" r="1"></circle><circle cx="7" cy="17" r="1"></circle></svg>
        </div>
        <div class="usp-text">
          <strong>10+</strong>
          <span>szín és mintázat</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Promo Section with Orange Product -->
  <section class="promo-section">
    <div class="container">
      <div class="promo-grid">
        <div class="promo-image">
          <ContentImage src={narancsTrapez} alt="Narancssárga trapézlemez" />
        </div>
        <div class="promo-content">
          <div class="promo-badge">AKCIÓ!</div>
          <p class="promo-text">
            0.6mm-es új, narancssárga (RAL2000) trapézlemez most csak
          </p>
          <p class="promo-price">2249 Ft /nm!</p>
          <p class="promo-urgency">Amíg a készlet tart!</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Problem Section - Video 40% left, Text 60% right -->
  <section class="problem-section">
    <div class="problem-grid">
      <div class="problem-video">
        <iframe
          src="https://www.youtube.com/embed/U_hP1vBoitg"
          title="Hogyan rontják el sokan"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen>
        </iframe>
      </div>
      <div class="problem-content">
        <h2>Hogyan rontják el sokan</h2>
        <p>Sokaknak van rossz tapasztalata a trapézlemezből készült kerítésekkel, oldalfalakkal és tetőkkel, mert könnyen törnek, hamar rozsdásodnak, és elhajolhatnak egy komolyabb szélviharban. <strong>Miért van ez így? Mert nem jó lemezt vesznek.</strong></p>
        <p>A vékonyabb trapézlemezekben egyszerűen nincsen "elég anyag", nem áll meg rajtuk a rozsdamentesítésért felelős horganyzó anyag, és nem tudnak elég merevséget biztosítani, ezért, törnek, szakadnak, hajlanak. Sokan próbálnak spórolni a vékonyabb anyaggal, de végül rosszabbul járnak...</p>
        <p class="solution-text">A jó hír, hogy mi az erősebb, vastagabb, ellenállóbb <strong>0,5 milliméteres</strong> lemezt adjuk sokkal olcsóbban, mint az megszokott. Ez már elég erős ahhoz, hogy jó szívvel tudjunk rá <strong>20 év garanciát</strong> vállalni - miközben árban sokszor még olcsóbb is, mint a vékonyabb versenytársai.</p>
      </div>
    </div>
  </section>

  <!-- USP Checker Section - 3 alternating image/text rows -->
  <section class="checker-section">
    <!-- Row 1: Image left, text right -->
    <div class="checker-row">
      <div class="checker-image">
        <LargeImage src={trapezEsztetikus} alt="Esztétikus trapézlemez" />
      </div>
      <div class="checker-content">
        <h3>Szeretni fog ránézni sok éven át</h3>
        <p>Minőségi trapézlemezzel nem csak tartós, de szép is lesz az építménye. Több, mint 10 féle szín és minta közül választhat az Ön vagy ügyfele igényei szerint.</p>
      </div>
    </div>

    <!-- Row 2: Text left, image right -->
    <div class="checker-row checker-row-reverse">
      <div class="checker-image">
        <LargeImage src={trapezKerites} alt="Trapézlemez kerítés" />
      </div>
      <div class="checker-content">
        <h3>Építkezzen gyorsan és egyszerűen</h3>
        <p>A lemezeket az Ön igényeinek megfelelően előre méretre vágjuk, így már csak fel kell szerelnie a kész paneleket. Ráadásul a lemezek könnyűek és ellenállóak (nem törékenyek, mint például a cserép vagy a pala), így egyszerű velük dolgozni.</p>
      </div>
    </div>

    <!-- Row 3: Image left, text right -->
    <div class="checker-row">
      <div class="checker-image">
        <LargeImage src={trapezGyarto} alt="Trapézlemez gyártó" />
      </div>
      <div class="checker-content">
        <h3>Spóroljon kompromisszumok nélkül</h3>
        <p>Spórolja meg a kiskereskedői árrést és vásároljon egyenesen a gyártótól. Takarítson meg súlyos tíz- vagy százezreket minőségi kompromisszumok nélkül!</p>
      </div>
    </div>
  </section>

  <!-- Shipping Section -->
  <section class="shipping-section">
    <div class="container">
      <h2 class="shipping-title">Akár <em>ingyen</em> házhozszállítjuk</h2>
      <p class="shipping-desc">A kész trapézlemezeket <strong>önköltségi áron szállítjuk ki</strong>. Miért?<br />
      Mert nem fuvarozók vagyunk, hanem trapézlemez gyártók, <strong>nem akarunk a szállításon pénzt keresni</strong>.</p>
      <p class="shipping-note">A kész, méretre vágott trapézlemez <strong>személyesen is átvehető</strong> a Budapest 18. kerületében található telephelyünkön.</p>

      <div class="shipping-options">
        <div class="shipping-card">
          <h3>Gazdaságos kiszállítás</h3>
          <p><strong>Ha spórolni szeretne a kiszállításon</strong>, összevárhatjuk a rendelését más, környékbeli rendelésekkel, így a kiszállítás díja eloszlik több vevő között. Ha ezt választja, 500e Ft feletti rendeléseknél <strong>a szállítás akár ingyenes is lehet</strong>!</p>
          <div class="shipping-prices">
            <div class="shipping-prices-header economy">A gazdaságos kiszállítás költsége</div>
            <div class="shipping-price-row">
              <span>250 négyzetméter alatt</span>
              <span class="price">19 990 Ft</span>
            </div>
            <div class="shipping-price-row free">
              <span>250 négyzetméter felett</span>
              <span class="price">INGYENES</span>
            </div>
          </div>
        </div>
        <div class="shipping-card">
          <h3>Soronkívüli kiszállítás</h3>
          <p><strong>Ha sürgősen van szüksége a trapézlemezre</strong>, kisebb felárért soron kívül elvisszük Önnek a kész, méretre vágott terméket. Ha ezt az opciót választja, <strong>akár még aznap</strong> megérkezhet Önhöz a rendelése.</p>
          <div class="shipping-prices">
            <div class="shipping-prices-header">A soronkívüli kiszállítás költsége</div>
            <div class="shipping-price-row">
              <span>250 négyzetméter alatt</span>
              <span class="price">39 990 Ft</span>
            </div>
            <div class="shipping-price-row free">
              <span>250 négyzetméter felett</span>
              <span class="price">INGYENES</span>
            </div>
          </div>
        </div>
      </div>

      <div class="shipping-cta">
        <p><strong>Küldje el megrendelését</strong> vagy töltse ki a villámgyors árkalkulátorunkat alább és <strong>kérjen visszahívást</strong>, hogy kollégáink tájékoztathassák a pontos szállítási költségről!</p>
        <a href="/kalkulator" class="btn-shipping-cta">SZÁMOLJA KI A KÖLTSÉGEIT MOST!</a>
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="process-section">
    <div class="container">
      <h2 class="process-title">A megrendelés menete</h2>

      <div class="process-steps">
        <div class="process-card">
          <div class="process-card-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <rect x="5" y="2" width="14" height="20" rx="2" ry="2"></rect>
              <line x1="9" y1="6" x2="15" y2="6"></line>
              <line x1="9" y1="10" x2="15" y2="10"></line>
              <line x1="9" y1="14" x2="12" y2="14"></line>
              <path d="M9 18l2 2 4-4"></path>
            </svg>
          </div>
          <p class="process-card-text">Töltse ki a megrendelő űrlapot vagy kérjen visszahívást az árkalkuláció végén.</p>
        </div>
        <div class="process-card">
          <div class="process-card-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <circle cx="12" cy="10" r="3"></circle>
              <path d="M7 20.662V19a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v1.662"></path>
              <path d="M16 4.5c1.5 1.5 2 3 2 5"></path>
              <path d="M19 3c2 2 2.5 4 2.5 6.5"></path>
            </svg>
          </div>
          <p class="process-card-text">A munkatársunk telefonon véglegesíti a megrendelés részleteit Önnel.</p>
        </div>
        <div class="process-card">
          <div class="process-card-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
          </div>
          <p class="process-card-text">Akár még aznap, de legkésőbb 48 órán belül legyártjuk a lemezeket.</p>
        </div>
        <div class="process-card">
          <div class="process-card-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <rect x="1" y="3" width="15" height="13"></rect>
              <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
              <circle cx="5.5" cy="18.5" r="2.5"></circle>
              <circle cx="18.5" cy="18.5" r="2.5"></circle>
            </svg>
          </div>
          <p class="process-card-text">A telephelyünkön átadjuk vagy kiszállítjuk Önnek a trapézlemezt.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Calculator CTA Section -->
  <section class="calculator-section">
    <div class="container">
      <h2 class="section-title">Árkalkulátor</h2>
      <div class="calculator-content">
        <div class="calculator-image">
          <ContentImage src={kalkulatorImg} alt="Trapézlemez árkalkulátor" />
        </div>
        <div class="calculator-text">
          <p>Számítsa ki, mennyi trapézlemezre lesz szüksége és mennyibe fog kerülni kevesebb, mint egy perc alatt!</p>
          <a href="/kalkulator" class="btn-cta-blue">Számolja ki a költségeit most!</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Partner Section (Működjünk együtt) -->
  <section class="partner-section">
    <div class="container">
      <div class="partner-grid">
        <div class="partner-person">
          <div class="partner-image">
            <ContentImage src={farkasRoland} alt="Farkas Roland" />
          </div>
          <p class="partner-name">Farkas Roland</p>
          <p class="partner-title">ügyvezető igazgató</p>
        </div>
        <div class="partner-content">
          <h2 class="partner-heading">Működjünk együtt!</h2>
          <p class="partner-text">Hosszú távra tervezünk. Szeretnénk, ha egy nap a trapézlemez vásárlás egyet jelentene az trapezlemezes.hu-val, és tudjuk, hogy ez csak úgy érhező el, ha nem csak a termékünk, de az ügyfélkezelésünk is kifogástalan.</p>
          <p class="partner-highlight">Számunkra az ügyfél mindig <em>partner.</em></p>
          <p class="partner-text">Hívjon bennünket bizalommal, az ajánlatunk része az is, hogy a vonal túloldalán mindig segítőkész és barátságos hang fogja megszólalni.</p>
          <div class="partner-cta">
            <a href="tel:+3613009206" class="partner-phone">+36 1 300-92-06</a>
            <a href="/kalkulator" class="partner-btn">ONLINE ÁRKALKULÁTOR</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Benefits Section (Nincs kockázat) -->
  <section class="benefits-section">
    <div class="container">
      <div class="benefits-grid">
        <div class="benefit-card">
          <div class="benefit-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="56" height="56" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
              <path d="M9 12l2 2 4-4"></path>
            </svg>
          </div>
          <h3 class="benefit-title">Nincs kockázat</h3>
          <p class="benefit-text">Tisztában vagyunk az általunk gyártott trapézlemez minőségével és tartósságával, ezért büszkén vállalunk rá <strong>két évtized minőségi garanciát</strong>.</p>
        </div>
        <div class="benefit-card">
          <div class="benefit-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="56" height="56" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12 6 12 12 16 10"></polyline>
              <path d="M4.93 4.93l14.14 14.14"></path>
            </svg>
          </div>
          <h3 class="benefit-title">Villámgyors gyártás</h3>
          <p class="benefit-text">Mi a gyakori egy hetes és tíz napos gyártási és szállítási időkkel szemben <strong>két munkanapos határidővel</strong> vállaljuk a méretre vágott trapézlemezek elkészítését.</p>
        </div>
        <div class="benefit-card">
