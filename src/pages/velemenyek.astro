---
import Layout from '../layouts/Layout.astro';
import BreadcrumbNav from '../components/BreadcrumbNav.astro';
import CtaBox from '../components/CtaBox.astro';

const reviews = [
  {
    name: 'Szabó István',
    location: 'Budapest',
    rating: 5,
    text: 'Kiváló minőségű lemez, gyors szállítás. A 0.5mm-es vastagság tényleg érezhető különbség a régi lemezekhez képest. Csak ajánlani tudom!',
    project: 'Garázs tető',
  },
  {
    name: 'Kovács Péter',
    location: 'Érd',
    rating: 5,
    text: 'Nagyon segítőkész csapat. Telefonon mindent elmagyaráztak, a kalkulátor is szuper volt. A lemez 2 napon belül megérkezett.',
    project: 'Kerítés',
  },
  {
    name: 'Tóth László',
    location: 'Gödöllő',
    rating: 5,
    text: 'Harmadszor rendelek már tőlük. Mindig pontosak, a minőség állandó. A szállítás is korrekt áron van.',
    project: 'Tető felújítás',
  },
  {
    name: 'Németh András',
    location: 'Dabas',
    rating: 5,
    text: 'Profi munka, korrekt árak. A narancssárga svéd acél lemez különösen tetszik – vastag, erős, szép.',
    project: 'Műhely tető',
  },
  {
    name: 'Horváth Gábor',
    location: 'Budaörs',
    rating: 5,
    text: 'Az online kalkulátor zseniális – percek alatt megvolt az ár, nem kellett senkire várnom. Ajánlom mindenkinek!',
    project: 'Tároló',
  },
  {
    name: 'Kiss Zoltán',
    location: 'Vecsés',
    rating: 5,
    text: 'A 20 éves garancia meggyőzött. Máshol 5-10 évet adnak, itt 20-at. Ez mondja a legtöbbet a minőségről.',
    project: 'Kerítés',
  },
];

const stars = (count: number) => '★'.repeat(count) + '☆'.repeat(5 - count);
---

<Layout
  title="Vélemények | Trapezlemezes.hu"
  description="Ügyfeleink véleményei a Trapezlemezes.hu-ról. Kizárólag 5 csillagos értékelések Google-on."
>
  <div class="container">
    <BreadcrumbNav items={[{ label: 'Rólunk', href: '/rolunk/' }, { label: 'Vélemények' }]} />

    <section class="section">
      <h1>Ügyfeleink véleményei</h1>
      <div class="reviews-header">
        <div class="reviews-summary">
          <span class="reviews-stars">★★★★★</span>
          <span class="reviews-score">5.0 / 5.0</span>
        </div>
        <p class="reviews-subtitle">Kizárólag öt csillagos értékeléseink vannak Google-on</p>
      </div>

      <div class="reviews-grid">
        {reviews.map((review) => (
          <div class="review-card">
            <div class="review-header">
              <div class="review-avatar">
                {review.name.split(' ').map(n => n[0]).join('')}
              </div>
              <div class="review-meta">
                <p class="review-name">{review.name}</p>
                <p class="review-location">{review.location} – {review.project}</p>
              </div>
            </div>
            <div class="review-stars" aria-label={`${review.rating} csillag`}>{stars(review.rating)}</div>
            <p class="review-text">„{review.text}"</p>
            <div class="review-source">
              <svg viewBox="0 0 24 24" width="14" height="14"><path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92a5.06 5.06 0 01-2.2 3.32v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.1z"/><path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/><path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/><path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/></svg>
              Google vélemény
            </div>
          </div>
        ))}
      </div>
    </section>

    <section class="section">
      <CtaBox title="Legyen Ön a következő elégedett ügyfelünk!" />
    </section>
  </div>
</Layout>

<style>
  .reviews-header {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
  }

  .reviews-summary {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-sm);
  }

  .reviews-stars {
    color: #f9a825;
    font-size: var(--font-size-2xl);
  }

  .reviews-score {
    font-size: var(--font-size-2xl);
    font-weight: 700;
  }

  .reviews-subtitle {
    color: var(--color-text-muted);
    margin: 0;
  }

  .reviews-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-lg);
  }

  .review-card {
    background: var(--color-white);
    border-radius: var(--radius-lg);
    padding: var(--spacing-lg);
    box-shadow: var(--shadow-md);
  }

  .review-header {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-md);
  }

  .review-avatar {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background: var(--color-primary);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: var(--font-size-sm);
    flex-shrink: 0;
  }

  .review-name {
    margin: 0;
    font-weight: 600;
  }

  .review-location {
    margin: 0;
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
  }

  .review-stars {
    color: #f9a825;
    font-size: var(--font-size-lg);
    margin-bottom: var(--spacing-sm);
  }

  .review-text {
    font-style: italic;
    line-height: 1.6;
    color: var(--color-text-light);
    margin-bottom: var(--spacing-md);
  }

  .review-source {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }

  @media (max-width: 1024px) {
    .reviews-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .reviews-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
