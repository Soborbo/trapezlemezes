    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 40px;
    align-items: center;
    margin-bottom: 50px;
    padding: 30px;
    background: #f8fafc;
    border-radius: 16px;
  }

  .benefit-row.reverse {
    grid-template-columns: 1fr 1.2fr;
    direction: rtl;
  }

  .benefit-row.reverse > * {
    direction: ltr;
  }

