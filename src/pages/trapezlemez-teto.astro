    max-width: 900px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .article-header {
    margin-bottom: 50px;
    text-align: center;
  }

  .article-header h1 {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    color: #1a3d5c;
    margin-bottom: 24px;
    line-height: 1.3;
  }

  .article-intro {
    font-size: 1.15rem;
    color: #475569;
    line-height: 1.8;
    max-width: 800px;
    margin: 0 auto;
  }

