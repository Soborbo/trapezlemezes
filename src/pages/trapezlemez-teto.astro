    margin: 0 0 50px;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 8px 30px rgba(0,0,0,0.15);
  }

  .hero-image :global(img) {
    width: 100%;
    height: auto;
    display: block;
  }

  .article-section {
    margin-bottom: 60px;
  }

  .article-section h2 {
    font-size: 1.8rem;
    color: #1a3d5c;
    margin-bottom: 20px;
    padding-bottom: 12px;
    border-bottom: 3px solid #12b1b8;
  }

  .article-section > p {
    font-size: 1.05rem;
    color: #475569;
    line-height: 1.7;
    margin-bottom: 24px;
  }

  .article-section h3 {
    font-size: 1.3rem;
    color: #1a3d5c;
    margin: 40px 0 16px;
  }

  .article-section a {
    color: #12b1b8;
    font-weight: 500;
  }

  .article-section a:hover {
    text-decoration: underline;
  }

  /* Benefit Rows */
